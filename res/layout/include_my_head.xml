<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
     <!-- 头像 -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="135dp"
        android:background="@drawable/user_bg"
        android:gravity="center"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            >
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            >
		        <ImageView 
		            android:id="@+id/my_user_head"
		            android:layout_width="80dp"
		            android:layout_height="80dp"
		            android:src="@drawable/user_image"
		            />
		        <ImageView 
		            android:id="@+id/my_user_camara"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/user_camera"
		            android:layout_alignRight="@id/my_user_head"
		            android:layout_alignBottom="@id/my_user_head"
		            android:visibility="visible"
		            />
	        </RelativeLayout>
	        <TextView 
	            android:id="@+id/my_login"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="立即登录"
	            android:textColor="@drawable/sel_my_top_login"
	            android:layout_marginTop="10dp"
	            android:clickable="true"
	            android:visibility="visible"
	            />
	     </LinearLayout>
    </RelativeLayout>

</LinearLayout>
